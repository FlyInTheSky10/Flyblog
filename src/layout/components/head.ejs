<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<%
		let title;
		if (post) {
			title = `${post.title} | ${config.title}`;
		} else {
			title = config.title;
		}
		let cssCommon = config.rootpath + "/static/css/common.css";
		let cssReset = config.rootpath + "/static/css/reset.css";
	%>
	<title><%= title %></title>
	<link href=<%= cssCommon %> rel="stylesheet">
	<link href=<%= cssReset %> rel="stylesheet">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
